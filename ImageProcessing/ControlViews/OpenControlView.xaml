<UserControl x:Class="ImageProcessing.ControlViews.OpenControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProcessing.ControlViews"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    
    <GroupBox Header="Open Image" Height="100">
        <StackPanel Margin="10,0,10,0" VerticalAlignment="Center">
            <Button Height="25px" Content="Open" Command="{Binding OpenImageCommand}" CommandParameter="Source"/>
        </StackPanel>
    </GroupBox>
</UserControl>
